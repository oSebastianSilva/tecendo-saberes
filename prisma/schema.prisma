generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  dateBirth String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model OriginalPeople {
  id                  Int              @id @default(autoincrement())
  name                String
  description         String
  estimatedPopulation Int
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @default(now()) @updatedAt
  regions             Region[]
  culturalAspects     CulturalAspect[]
  languages           Language[]
  terminologies       Terminology[]
}

model Language {
  id            Int              @id @default(autoincrement())
  name          String
  active        String
  speakers      Int
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @default(now()) @updatedAt
  people        OriginalPeople[]
  terminologies Terminology[]
}

model Terminology {
  id         Int              @id @default(autoincrement())
  term       String
  definition String
  context    String
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @default(now()) @updatedAt
  languages  Language[]
  people     OriginalPeople[]
}

model Region {
  id          Int              @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now()) @updatedAt
  people      OriginalPeople[]
}

model CulturalAspect {
  id          Int              @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now()) @updatedAt
  people      OriginalPeople[]
}
